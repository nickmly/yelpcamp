<% include ../partials/header %>
<div class="container">
    <div class="row">

        <div class="panel panel-primary" style="width: 40%; margin: 20px auto;">
            <div class="panel-heading">
                <h1 style="text-align: center;">Edit <%= campground.name %></h1>
            </div>
            <div class="panel-body">
                <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[desc]" placeholder="Description" value="<%= campground.desc %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>