<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="panel panel-primary" style="width: 40%; margin: 20px auto;">
                <div class="panel-heading">
                    <h1 style="text-align: center;">Add New Comment to
                        <%= campground.name %>
                    </h1>
                </div>
                <div class="panel-body">
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" value="<%= currentUser.username %>" name="comment[author]" readonly>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-lg btn-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>